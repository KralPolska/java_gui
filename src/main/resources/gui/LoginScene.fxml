<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="20" prefHeight="900.0" prefWidth="1200" style="-fx-background-color: #333333; -fx-text-fill: white;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.LoginSceneController">
    <Label text="Logowanie" />
    <VBox prefWidth="30" alignment="CENTER" spacing="5">
        <Label text="Login" textFill="WHITE"/>
        <TextField fx:id="usernameField" prefHeight="50.0" maxWidth="200.0"/>
    </VBox>
    <VBox prefWidth="30" alignment="CENTER" spacing="5">
        <Label text="Haslo" textFill="WHITE"/>
        <PasswordField fx:id="passwordField" prefHeight="50.0" maxWidth="200.0"/>
    </VBox>
    <VBox alignment="CENTER" spacing="10">
        <CheckBox fx:id="rememberMeCheckbox" text="Zapamietaj mnie" textFill="WHITE"/>
    </VBox>
    <Button fx:id="loginButton" text="Zaloguj" style="-fx-base: #3b3b3b; -fx-text-fill: white;" prefHeight="50.0" prefWidth="200.0"/>
    <Label fx:id="infoLabel"/>
    <Button fx:id="backToMain" text="Powrot" style="-fx-base: #3b3b3b; -fx-text-fill: white;" prefHeight="50.0" prefWidth="200.0"/>
</VBox>
